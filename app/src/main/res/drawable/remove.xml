<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FF0000" /> <!-- Change the color as desired -->
        </shape>
    </item>

    <!-- X shape -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">

            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="#FFFFFF" /> <!-- Change the color as desired -->
            </shape>
        </rotate>
    </item>

    <!-- X shape -->
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="50%">

            <shape android:shape="line">
                <stroke
                    android:width="4dp"
                    android:color="#FFFFFF" /> <!-- Change the color as desired -->
            </shape>
        </rotate>
    </item>
</layer-list>